{
  "name": "com.gams.miro",
  "version": "0.0.1",
  "description": "GAMS MIRO Launcher",
  "homepage": "https://gams.com/miro",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "pack": "node ./build/scripts/pre-pack.js && electron-builder --dir",
    "dist": "node ./build/scripts/pre-pack.js && electron-builder"
  },
  "build": {
    "appId": "com.gams.miro",
    "productName": "GAMS MIRO",
    "afterPack": "build/scripts/after-pack.js",
    "afterSign": "build/scripts/notarize.js",
    "extraResources": [
      "miro/conf/*",
      "miro/global.R",
      "miro/app.R",
      "miro/LICENSE",
      "miro/modules/**",
      "miro/R/**",
      "miro/www/**",
      "miro/resources/**",
      "miro/tools/**",
      "miro/UI/**",
      "miro/start-shiny.R"
    ],
    "files": [
      "**/*",
      "!r/**",
      "!r-src/**",
      "!electron-builder.env",
      "!miro/**"
    ],
    "fileAssociations": {
      "ext": [
        "miroapp"
      ],
      "name": "MIRO App",
      "description": "MIRO Application",
      "mimeType": "application/zip"
    },
    "mac": {
      "extraFiles": [{
        "from": "r",
        "to": "MacOS/r",
        "filter": "**/*"
      }],
      "category": "public.app-category.productivity",
      "icon": "./build/icon.icns",
      "darkModeSupport": true,
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "./build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerSidebar": "./build/installerSidebar.bmp",
      "license": "../miro/LICENSE",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git@git.gams.com:rschuchmann/miro-launcher.git"
  },
  "keywords": [
    "GAMS",
    "MIRO",
    "Launcher"
  ],
  "author": "GAMS Development Corp.",
  "license": "MIT",
  "devDependencies": {
    "electron": "^6.0.11",
    "electron-builder": "^21.2.0",
    "electron-notarize": "^0.1.1",
    "rimraf": "^3.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2",
    "axios": "^0.19.0",
    "bootstrap": "^4.3.1",
    "electron-log": "^3.0.8",
    "electron-store": "^5.0.0",
    "execa": "^3.0.0",
    "jquery": "^3.4.1",
    "popper.js": "^1.15.0",
    "which": "^2.0.1",
    "yauzl": "^2.10.0"
  }
}
