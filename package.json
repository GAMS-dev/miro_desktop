{
  "name": "com.gams.miro",
  "version": "1.0.99",
  "description": "GAMS MIRO is an interactive web application for GAMS models. It is designed for people working with GAMS looking for an easy and automated way to deploy their models. Extensive visualization options support you to make decisions based on optimization.",
  "homepage": "https://gams.com/miro",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "test": "node ./test/run-tests.js",
    "start": "electron .",
    "pack": "node ./build/scripts/pre-pack.js && electron-builder --dir",
    "dist": "node ./build/scripts/pre-pack.js && electron-builder",
    "docker-build": "node ./build/scripts/pre-pack.js --docker",
    "docker-publish": "node ./build/scripts/docker-publish.js",
    "docker-publish-unstable": "node ./build/scripts/docker-publish.js --unstable"
  },
  "build": {
    "appId": "com.gams.miro",
    "productName": "GAMS MIRO",
    "afterPack": "build/scripts/sign-dmg.js",
    "afterAllArtifactBuild": "build/scripts/notarize.js",
    "extraResources": [
      "miro/conf/*",
      "miro/global.R",
      "miro/app.R",
      "miro/LICENSE",
      "miro/modules/**",
      "miro/components/**",
      "miro/JS/**",
      "miro/www/**",
      "miro/resources/**",
      "miro/examples/**",
      "miro/tools/**",
      "miro/UI/**",
      "miro/start-shiny.R"
    ],
    "files": [
      "**/*",
      "!scripts/**",
      "!r/**",
      "!r-src/**",
      "!electron-builder.env",
      "!miro/**"
    ],
    "fileAssociations": {
      "ext": "miroapp",
      "name": "MIRO App",
      "description": "MIRO Application",
      "mimeType": "application/miro"
    },
    "mac": {
      "extraFiles": [
        {
          "from": "r/lib",
          "to": "MacOS/r/lib",
          "filter": "**/*"
        },
        {
          "from": "r/bin",
          "to": "MacOS/r/bin",
          "filter": "**/*"
        },
        {
          "from": "r/modules",
          "to": "MacOS/r/modules",
          "filter": "**/*"
        }
      ],
      "extraResources": [
        "r/library/methods",
        "r/etc",
        "r/fontconfig",
        "r/include",
        "r/man1",
        "r/share"
      ],
      "category": "public.app-category.productivity",
      "icon": "./build/icon.icns",
      "darkModeSupport": true,
      "target": [
        "dmg"
      ]
    },
    "win": {
      "extraFiles": [
        "r/**"
      ],
      "target": "nsis",
      "icon": "./build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerSidebar": "./build/installerSidebar.bmp",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "extraFiles": [
        "r/**",
        "scripts/**"
      ],
      "artifactName": "GAMS-MIRO-${version}.${ext}",
      "target": "AppImage",
      "category": "Science"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@git.gams.com:rschuchmann/miro-launcher.git"
  },
  "keywords": [
    "GAMS",
    "MIRO",
    "Launcher"
  ],
  "author": "GAMS Development Corp.",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "electron": "^9.0.0",
    "electron-builder": "^22.6.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2",
    "ajv": "^6.10.2",
    "axios": "^0.19.0",
    "better-sqlite3": "^7.1.0",
    "bootstrap": "^4.5.0",
    "electron-log": "^4.1.2",
    "electron-store": "^5.0.0",
    "execa": "^4.0.1",
    "fs-extra": "^9.0.0",
    "jquery": "^3.5.1",
    "popper.js": "^1.15.0",
    "portscanner": "^2.2.0",
    "tree-kill": "^1.2.2",
    "which": "^2.0.1",
    "yauzl": "^2.10.0"
  }
}
