pipeline {
    agent none

    options {
        buildDiscarder(logRotator(numToKeepStr: '4'))
        disableConcurrentBuilds()
    }

    stages {
        stage('Build') {
            parallel {
                stage ('linux') {
                    agent { label 'docker' }
                    steps {
                        sh '''
                           yarn install --non-interactive
                        '''
                    }
                }
                stage ('windowsX64') {
                    agent { label 'windowsX64' }
                    steps {
                        withCredentials([certificate(aliasVariable: '', credentialsId: '302df092-b329-47b9-8f7a-605da075126d', keystoreVariable: 'WIN_CERT_FILE', 
                            passwordVariable: 'CSC_KEY_PASSWORD')]) {
                                bat '''
                                   yarn install --non-interactive
                                '''
                            }
                    }
                }
                stage ('macos') {
                    agent { label 'macos' }
                    steps {
                        sh '''
                           yarn install --non-interactive
                        '''
                    }
                }
            }
        }
        stage('Test') {
            parallel {
                stage ('linux') {
                    agent { label 'docker' }
                    options {
                        skipDefaultCheckout()
                    }
                    steps {
                        sh '''
                           yarn test
                        '''
                        junit allowEmptyResults: true, testResults: 'miro/test-out.xml'
                    }
                }
                stage ('windowsX64') {
                    agent { label 'windowsX64' }
                    options {
                        skipDefaultCheckout()
                    }
                    steps {
                        bat '''
                           yarn test
                        '''
                        junit allowEmptyResults: true, testResults: 'miro/test-out.xml'
                    }
                }
                stage ('macos') {
                    agent { label 'macos' }
                    options {
                        skipDefaultCheckout()
                    }
                    steps {
                        sh '''
                           yarn test
                        '''
                        junit allowEmptyResults: true, testResults: 'miro/test-out.xml'
                    }
                }
            }
        }
        stage('Deploy') {
            parallel {
                stage ('linux') {
                    agent { label 'docker' }
                    options {
                        skipDefaultCheckout()
                    }
                    steps {
                        archiveArtifacts artifacts: 'dist/*.AppImage', fingerprint: true
                    }
                }
                stage ('windowsX64') {
                    agent { label 'windowsX64' }
                    options {
                        skipDefaultCheckout()
                    }
                    steps {
                        archiveArtifacts artifacts: 'dist/*.exe', fingerprint: true
                    }
                }
                stage ('macos') {
                    agent { label 'macos' }
                    options {
                        skipDefaultCheckout()
                    }
                    steps {
                        archiveArtifacts artifacts: 'dist/*.dmg', fingerprint: true
                    }
                }
            }
        }
    }
}